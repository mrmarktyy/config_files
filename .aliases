# Dir navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'

# Utilities
if [ $(uname) == "Darwin" ]; then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi
alias l='ls -la'
alias nl='nload -t 1000'

# Vagrant
alias vgs='cd ~/salt-developer; vagrant ssh'
alias vgu='cd ~/salt-developer; vagrant up'
alias vgh='cd ~/salt-developer; vagrant halt'

# Forever
alias fl='sudo forever list'
alias fs='sudo forever start index.js'